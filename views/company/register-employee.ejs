<% layout('layout') %>
    <div id="wrapper">
        <% include ../partials/sidebar %>
        <div id="page-content-wrapper">
            <% include ../partials/navbar %>
            <div class="container-fluid main_body">
                <div class="ul_links">
                    <ul>
                        <li><a href="/">Home</a></li> |
                        <li><a href="/company/list">Company</a></li> |
                        <li><a href="#">Register Employee</a></li>
                    </ul>
                </div>

                <div class="bodyDiv">
                    <h4 >Register Employee</h4>

                    <div class="form-group">
                        <h4>Company</h4>
                        <h3><%= data.name %></h3>
                    </div>
                    <br>
                    <form action="/company/register" method="post">
                        <div class="form-group ">
                            <label for="role">Employee Role</label>
                            <input id="role" class="form-control" name="role" type="text" style="margin-bottom:20px;" placeholder="Employee Role">
                        </div>

                        <div class="form-group">
                            <input type="hidden" value="<%= data._id %>" name="idCompany" id="idCompany">
                            <input type="submit"  id="role" value="Register" class="form-control btn btn-primary" name="employeeRole" style="">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

